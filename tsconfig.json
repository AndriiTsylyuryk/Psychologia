{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true, // Ігнорує перевірку типів у бібліотеках
    "noEmit": false, // Дозволяє створювати вихідні файли, навіть якщо є помилки
    "strict": false, // Знижує рівень суворості
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
